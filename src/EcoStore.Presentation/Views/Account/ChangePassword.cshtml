@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Зміна паролю";
}

<div class="d-flex justify-content-center">
    <div class="w-50">
        <h2 class="text-center">Зміна паролю</h2>
        <form asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label asp-for="OldPassword">Старий пароль:</label>
                <input asp-for="OldPassword" class="form-control" type="password" required>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">Новий пароль:</label>
                <input asp-for="NewPassword" class="form-control" type="password" required>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword">Повторіть новий пароль:</label>
                <input asp-for="ConfirmNewPassword" class="form-control" type="password" required>
            </div>
            <div asp-validation-summary="All" class="text-danger no-dots-list"></div>
            <div class="form-group text-center">
                <br>
                <button type="submit" class="btn btn-primary w-50">Змінити</button>
            </div>
        </form>
    </div>
</div>

