@model LoginViewModel

<form asp-action="Login" method="post">
    <div>
        <input asp-for="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Password" required>
    </div>
    <button type="submit">Увійти</button>
</form>
