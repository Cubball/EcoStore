@model AppUserViewModel
@{
    ViewData["Title"] = $"Користувач {Model.FirstName} {Model.LastName}";
}

<h2 class="text-center">Дані про користувача</h2>
<div class="w-75 border rounded container p-3">
    <div class="row">
        <div class="col-6 h-100">
            Id: @Model.Id<br>
            Email: @Model.Email<br>
            Ім'я: @Model.FirstName @Model.LastName<br>
            Телефон: @Model.PhoneNumber<br>
            Роль: @EnumHelper.GetRoleName(Model.Role)<br>
        </div>
        <div class="col-6 h-100 text-center">
            <a asp-area="Admin" asp-controller="Orders" asp-action="User" asp-route-id="@Model.Id" class="btn btn-secondary mt-3 w-75">Переглянути замовлення користувача</a>
            <br>
            <a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3 w-75">Видалити користувача</a>
        </div>
    </div>
</div>
