@model SalesReportOptionsViewModel
@{
    ViewData["Title"] = "Звітність по продажах";
}

<h2 class="text-center">Звітність по продажах</h2>
<div class="d-flex justify-content-center">
    <div class="w-50">
        <form asp-action="Sales" method="post">
            <div class="form-group">
                <label asp-for="SortBy">Сортування:</label>
                <select asp-for="SortBy" asp-items="EnumHelper.SortSalesBySelectList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="From">Початкова дата:</label>
                <input asp-for="From" class="form-control" type="date">
            </div>
            <div class="form-group">
                <label asp-for="To">Кінцева дата:</label>
                <input asp-for="To" class="form-control" type="date">
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Згенерувати звіт</button>
        </form>
    </div>
</div>
