@model OrdersReportOptionsViewModel
@{
    ViewData["Title"] = "Звітність по замовленнях";
}

<h2 class="text-center">Звітність по замовленнях</h2>
<div class="d-flex justify-content-center">
    <div class="w-50">
        <form asp-action="Orders" method="post">
            <div class="form-group">
                <label asp-for="From">Початкова дата:</label>
                <input asp-for="From" class="form-control" type="date">
            </div>
            <div class="form-group">
                <label asp-for="To">Кінцева дата:</label>
                <input asp-for="To" class="form-control" type="date">
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Згенерувати звіт</button>
        </form>
    </div>
</div>
